<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net7.0</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Version>1.0.0</Version>
        <Authors>SonDev</Authors>
        <Product>TusSharp</Product>
        <PackageProjectUrl>https://github.com/thsdmfwns/TusSharp</PackageProjectUrl>
        <PackageTags>tus;upload;http;streaming;pipeline;resumable file upload;</PackageTags>
        <Description>
            Tus, resumable file upload client for .Net
        </Description>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="System.IO.Pipelines" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Internal" />
    </ItemGroup>

</Project>
